._pagination
  margin-left auto
  margin-right auto
  ._pagination__page
    display inline-block
    color $colorPrimary
    height 34px
    padding 7px 12px 9px
    cursor pointer
  ._pagination__page + .pagination__pag
    border-left 1px solid $black-15
  ._pagination__page--selected
    cursor default
    background $colorPrimary
    border 1px solid $colorPrimaryDark
    color $white
